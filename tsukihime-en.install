post_install() {
  echo "To complete installation, run /usr/share/tsukihime-en/install.sh as root. This extracts files from the game disc."
  echo "Walkthrough, liner notice and flowchart from Mirror Moon were placed at /usr/share/doc/tsukihime-en."
}

pre_remove() {
  rm -r /usr/share/tsukihime-en >& /dev/null
}

